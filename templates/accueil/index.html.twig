											<a href="{{ path("accueil.produit.elere",{id:Produit.id }) }}" type="button" class="btn z-depth btn-rounded mb-1 text-center">Lire ls suite</a>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
